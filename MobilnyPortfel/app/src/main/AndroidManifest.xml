<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.joanna.mobilnyportfel">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".AccountType"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Password"
            android:screenOrientation="portrait"/>
        <activity android:name=".EnterExpenses"
            android:screenOrientation="portrait"/>
        <activity android:name=".ExpensesCategory"
            android:screenOrientation="portrait"/>
        <activity android:name=".Menu"
            android:screenOrientation="portrait"/>
        <activity android:name=".EnterIncome"
            android:screenOrientation="portrait"/>
        <activity android:name=".IncomeCategory"
            android:screenOrientation="portrait"/>
        <activity android:name=".ShoppingList"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".AddProductActivity"
            android:label="@string/title_activity_add_product"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".displayExpenses"
            android:label="@string/title_activity_display_expenses"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".displayIncome"
            android:label="@string/title_activity_display_income"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity android:name=".SortData" />
        <activity android:name=".Daily" />
        <activity android:name=".Monthly" />
        <activity android:name=".Yearly" />
    </application>

</manifest>