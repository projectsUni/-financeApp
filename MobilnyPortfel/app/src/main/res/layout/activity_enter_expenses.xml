<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.joanna.mobilnyportfel.EnterExpenses">


    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal">


        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wprowadź nazwę wydatku"
            android:textSize="20dp"
        />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="5dp"
         />

        <EditText
            android:id="@+id/expense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textAutoComplete" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wybierz kategorię"
            android:textSize="20dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <Button
            android:id='@+id/expenseCategory'
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "Kategoria"
            android:backgroundTint="@android:color/holo_blue_dark"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wprowadź kwotę"
            android:textSize="20dp"
            />
        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp" />

        <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal">

         <EditText
             android:id="@+id/zl"
             android:layout_width="100dp"
             android:layout_height="wrap_content"
             android:ems="10"
             android:inputType="numberDecimal"
         />

         <Space
             android:layout_width="match_parent"
             android:layout_height="5dp" />
         <EditText
            android:id="@+id/grosz"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:maxLength="2"/>

     </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wprowadź datę"
            android:textSize="20dp"
            />
        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <DatePicker
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:backgroundTint="@android:color/holo_blue_light"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />
        <Button
            android:id='@+id/expenseConfirm'
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "Zatwierdź"
            android:backgroundTint="@android:color/holo_blue_dark"

            />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
