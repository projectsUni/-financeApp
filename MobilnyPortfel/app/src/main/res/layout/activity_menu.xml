<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.joanna.mobilnyportfel.Menu">
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/background" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/frameLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/enterIncome"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:paddingTop="30dp"
                android:backgroundTint="@color/colorBlack_Opacoty"
                android:text="przychody"
                android:drawableTop="@drawable/przychod"
                android:textColor="#fff" />

            <Button
                android:id="@+id/enterExpenses"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/colorBlack_Opacoty"
                android:drawableTop="@drawable/wydatek"
                android:paddingTop="30dp"
                android:text="wydatki"
                android:textColor="#fff" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/showIncome"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorBlack_Opacoty"
                android:drawableTop="@drawable/wprzychod_white"
                android:paddingTop="30dp"
                android:text="wyświetl przychody"
                android:textColor="#fff" />

            <Button
                android:id="@+id/showExpenses"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorBlack_Opacoty"
                android:drawableTop="@drawable/wwydatek_white"
                android:paddingTop="30dp"
                android:text="wyświetl wydatki"
                android:textColor="#fff" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/shoppingList"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorBlack_Opacoty"
                android:drawableTop="@drawable/lista_white"
                android:paddingTop="25dp"
                android:text="lista zakupów"
                android:textColor="#fff" />

            <Button
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/colorBlack_Opacoty" />

        </LinearLayout>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>
