<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.joanna.mobilnyportfel.Menu">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/enterExpenses"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:text = "wydatki"
                android:backgroundTint="@android:color/holo_red_light"
                />

            <Button
                android:id="@+id/enterIncome"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:text="przychody"
                android:backgroundTint="@android:color/holo_green_light"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/shoppingList"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:text="lista zakupów"
                android:backgroundTint="#86B2DF"
                />

            <Button
                android:layout_width="150dp"
                android:layout_height="150dp"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/showExpenses"
                android:text="wyświetl wydatki"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:backgroundTint="#87A"
                />

            <Button
                android:id="@+id/showIncome"
                android:text="wyświetl wydatki"
                android:layout_width="150dp"
                android:layout_height="150dp"
                />

        </LinearLayout>




    </LinearLayout>
</android.support.constraint.ConstraintLayout>
