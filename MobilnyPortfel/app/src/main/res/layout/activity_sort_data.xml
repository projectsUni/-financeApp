<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.joanna.mobilnyportfel.SortData">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/background" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/daily"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:backgroundTint="@color/colorBlack_Opacoty"
                android:text="dziennie"
                android:textColor="#fff"/>

            <Button
                android:id="@+id/monthly"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:backgroundTint="@color/colorBlack_Opacoty"
                android:text="miesiÄ™cznie"
                android:textColor="#fff"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/yearly"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:backgroundTint="@color/colorBlack_Opacoty"
                android:text="rocznie"
                android:textColor="#fff" />

            <Button
                android:id="@+id/alldata"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:backgroundTint="@color/colorBlack_Opacoty"
                android:text="wszystkie"
                android:textColor="#fff"/>


        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
