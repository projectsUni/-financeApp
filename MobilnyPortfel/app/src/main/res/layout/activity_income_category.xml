<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.joanna.mobilnyportfel.IncomeCategory">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal">

        <Button
            android:id="@+id/payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wypłata"
            android:backgroundTint="@android:color/holo_green_light"
            />


        <Button
            android:id="@+id/scholarship"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="stypendium"
            android:backgroundTint="@android:color/holo_orange_light"
            />


        <Button
            android:id="@+id/prize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wygrana"
            android:backgroundTint="@android:color/holo_red_light"
            />

        <Button
            android:id="@+id/loan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pożyczka"
            android:backgroundTint="@android:color/holo_blue_light"
            />


        <Button
            android:id="@+id/sale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sprzedaż"
            android:backgroundTint="@android:color/darker_gray"
            />

        <Button
            android:id="@+id/otherIncome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="inne"
            android:backgroundTint="@android:color/holo_purple"

            />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
